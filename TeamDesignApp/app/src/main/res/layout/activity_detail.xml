<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="337dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="56dp"
        android:text="Atmospheric CO2 Levels is ~ 410 PPM\nNormal outdoor level: 350 - 450 ppm \nAcceptable levels: Less than 600 ppm \nComplaints of stuffiness and odors: 600 - 1000 ppm \nGeneral drowsiness: 1000 - 2500 ppm."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="148dp"
        android:text="CO2 READINGS:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="512dp"
        android:text="Details For User"
        android:textColor="#152EBC"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="301dp"
        android:layout_height="296dp"
        android:layout_gravity="center"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="172dp"
        android:text="First use or after long turn off period: After long periods of innactivity, the MQ-135 Air quality sensor will require appriximately 20 minutes to warm up and may not provide accurate readings during this period.\n\nThis sensor is suitable for measuring smoke, CO2, CO, alcohol and benzene in air.\n\nNot all locations can be expected to have similar PPM readings and so please select the sensitivity level suited for you in the Control Activity Page.\n\nPlease allow up to a minute for the scroll list to buffer in all pending values prior to using the interface."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"

        android:layout_marginEnd="150dp"
        android:layout_marginBottom="468dp"
        android:text="General"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>