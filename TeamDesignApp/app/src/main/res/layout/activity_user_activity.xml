<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FanButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDD7E3"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnClearInput"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0dp"
            android:layout_weight="0"
            android:text="Clear Input" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="CONTROLS"
            android:textColor="#035FA8"
            android:textSize="30sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <Button
            android:id="@+id/detailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Details"
            app:backgroundTint="#4963F3"
            app:iconTint="#213DF3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/viewScroll"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtReceive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:background="#eeeeee"
                android:hint="Data log will be displayed here"
                android:scrollbars="vertical"
                android:textColor="#000000"
                android:typeface="monospace" />
        </ScrollView>

        <CheckBox
            android:id="@+id/chkScroll"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_margin="0dp"
            android:checked="true"
            android:text="Scroll"
            android:buttonTint="@color/black"
            app:buttonTint="@color/black" />

        <CheckBox
            android:id="@+id/chkReceiveText"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:checked="true"
            android:text="Read"
            android:buttonTint="@color/black"
            app:buttonTint="@color/black" />

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false"
            android:editable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#EF0C0C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_view"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAlertView"
                android:layout_width="205dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Notification Mode"
                android:textColor="#03579A"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/toggleAlertButton"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textOff="Silent"
                android:textOn="Vibrate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFanView"
                android:layout_width="205dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fan Mode"
                android:textColor="#04518E"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/toggleFanButton"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textOff="Automatic"
                android:textOn="Manual" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="    Manual Fan Control"
            android:textColor="#04518E"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButtonMan"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:text="ToggleButton"
            android:textColorLink="#F10202"
            android:textOff="Turn OFF Fan"
            android:textOn="Turn ON Fan" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SMOKE SENSOR SENSITIVITY"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SensLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D7E47A73"
            android:text="LOW"
            android:textColor="#000000"
            app:backgroundTint="#D7E47A73"
            tools:visibility="visible" />

        <Button
            android:id="@+id/SensNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EFE164"
            android:text="NORMAL"
            android:textColor="@color/black"
            app:backgroundTint="#EFE164" />

        <Button
            android:id="@+id/SensHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#06D3BE"
            android:text="HIGH"
            android:textColor="@color/black"
            app:backgroundTint="#06D3BE" />
    </LinearLayout>


</LinearLayout>